{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node16",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
